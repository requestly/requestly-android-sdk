<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground">

    <View
        android:id="@+id/event_list_item_status_bar"
        android:layout_width="@dimen/l8"
        android:layout_height="@dimen/l0"
        android:layout_marginTop="@dimen/m2"
        android:layout_marginBottom="@dimen/m2"
        android:background="@color/success"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/event_list_item_name"
        android:layout_width="@dimen/l0"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/m8"
        android:gravity="start"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/event_list_item_status_bar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.60"
        tools:text="Bottom Bar Shown" />

    <TextView
        android:id="@+id/events_list_item_timestamp"
        android:layout_width="@dimen/l0"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/m8"
        android:gravity="end"
        android:paddingVertical="@dimen/p8"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.25"
        tools:text="12:01:01 PM" />

    <View
        android:id="@+id/event_list_item_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/l1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/gray"
    />

</androidx.constraintlayout.widget.ConstraintLayout>
