<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Headers -->
    <style name="h1" parent="android:TextAppearance">
        <item name="android:textSize">@dimen/s64</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="h2" parent="android:TextAppearance">
        <item name="android:textSize">@dimen/s32</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="h3" parent="android:TextAppearance">
        <item name="android:textSize">@dimen/s16</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="h4" parent="android:TextAppearance">
        <item name="android:textSize">@dimen/s8</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="h5" parent="android:TextAppearance">
        <item name="android:textSize">@dimen/s4</item>
        <item name="android:textStyle">bold</item>
    </style>


    <!-- LYNX -->
    <style name="Spinner"
        parent="@android:style/Widget.Spinner">
        <item name="android:textColor">?colorOnSurfaceInverse</item>
    </style>
    <!-- Extracted from AOSP
    https://github.com/android/platform_frameworks_base/blob/froyo-release/core/res/res/layout/simple_list_item_1.xml -->
    <style name="DropDown">
        <item name="android:textColor">?colorOnSurfaceInverse</item>
        <item name="android:background">?colorSurfaceInverse</item>
        <item name="android:paddingLeft">6dip</item>
        <item name="android:minHeight">?android:attr/listPreferredItemHeight</item>
        <item name="android:gravity">center_vertical</item>
    </style>
</resources>
